<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
        http://code.alibabatech.com/schema/dubbo
        http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <dubbo:consumer timeout="60000" loadbalance="random" retries="0"/>

    <!-- Scan annotation package path, multiple packages separated by commas, do not fill pacakge scan all the current class in the ApplicationContext -->
    <dubbo:annotation package="xyz.proteanbear" />

    <!-- Provider application information, used to calculate dependencies -->
    <dubbo:application name="consumer"  />

    <!-- Use the zookeeper registry to expose the service address -->
    <dubbo:registry address="zookeeper://127.0.0.1:2181"/>

    <!-- Use dubbo protocol in the 20880 port exposed service -->
    <dubbo:protocol name="dubbo" port="20880" />

</beans>